<% if @requests %>
  <% @requests.each do |request| %>
     <label>Email: </label><%= @users.get(request.user_id).email %><br>
     <label>Property: </label><%= @spaces.get(request.space_id).name%></a><br>
     <label>Price: </label><%= @spaces.get(request.space_id).price %><br>
     <label>Description: </label><%= @spaces.get(request.space_id).description %>
     <br>
     <label>Checkin: </label><%= request.date_from %><br>
     <label>Checkout: </label><%= request.date_to %><br>

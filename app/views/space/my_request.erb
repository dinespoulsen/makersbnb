<center>
  <div class="jumbotron">
  <div class="container">
    <% if @requests.empty? %>
      <h3><%= "You have not made any requests" %></h3>
    <% else %>
      <h3><%= "Your requests" %></h3>
    <% end %>
  </div>
</div>

</center>

<div class="container">
  <div class="row">
    <% if @requests %>
     <% @requests.each do |request| %>
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Name:</th>
                <th>Price:</th>
                <th>Description:</th>
                <th>Available from</th>
                <th>Available to</th>
                <th>Confirmed</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= request.space.name %></td>
                <td><%= request.space.price %></td>
                <td><%= request.space.description %></td>
                <td><%= request.date_from.strftime('%d/%m/%Y') %></td>
                <td><%= request.date_to.strftime('%d/%m/%Y') %></td>
                <td><%= request.confirmed %></td>
              </tr>
            </tbody>
          </table>
          </div>
      </div>
     <% end %>
    <% end %>
  </div>
</div>
